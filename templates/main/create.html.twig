{% extends 'base.html.twig' %}

{% block title %}создать программу обучения{% endblock %}

{% block content %}

    {{ form_start(form) }}
      <div class="form-group">
        {{ form_label(form.Title) }}
        {{ form_widget(form.Title, { 'attr':{ 'class':'form-control' }}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.Description) }}
        {{ form_widget(form.Description, { 'attr':{ 'class':'form-control', 'rows':'5' }}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.Thumbnail) }}
        {{ form_widget(form.Thumbnail, { 'attr':{ 'class':'form-control', 'accept':'image/jpeg' }}) }}
      </div>
      <div class="form-group">
        <h3>Список организаторов</h3>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Добавить организатора(-ов)
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Пользователи</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                {{ form_widget(form.organizers) }}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{ form_widget(form.Create, { 'attr':{ 'class':'btn btn-primary' }}) }}
    {{ form_end(form) }}
    
{% endblock %}
